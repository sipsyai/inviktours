{
  "kind": "collectionType",
  "collectionName": "adventures",
  "info": {
    "singularName": "adventure",
    "pluralName": "adventures",
    "displayName": "Adventure",
    "description": "Adventure listings with dynamic content sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true
    },
    "subtitle": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "duration": {
      "type": "integer"
    },
    "startLocation": {
      "type": "string"
    },
    "endLocation": {
      "type": "string"
    },
    "mainImage": {
      "type": "media",
      "multiple": false,
      "allowedTypes": ["images"]
    },
    "images": {
      "type": "media",
      "multiple": true,
      "allowedTypes": ["images", "videos"]
    },
    "tripAttributes": {
      "type": "component",
      "repeatable": false,
      "component": "adventure.trip-attributes"
    },
    "tripInfo": {
      "type": "component",
      "repeatable": false,
      "component": "adventure.trip-info"
    },
    "requirements": {
      "type": "component",
      "repeatable": false,
      "component": "adventure.requirements"
    },
    "itinerary": {
      "type": "component",
      "repeatable": true,
      "component": "adventure.itinerary-day"
    },
    "tours": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tour.tour",
      "mappedBy": "adventure"
    },
    "video": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["videos"]
    },
    "contentSections": {
      "type": "dynamiczone",
      "components": [
        "adventure.hero-section",
        "adventure.info-cards-section",
        "adventure.timeline-section",
        "adventure.gallery-section",
        "adventure.pricing-section",
        "adventure.contact-form-section"
      ]
    }
  }
}
