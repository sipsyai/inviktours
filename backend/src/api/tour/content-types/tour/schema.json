{
  "kind": "collectionType",
  "collectionName": "tours",
  "info": {
    "singularName": "tour",
    "pluralName": "tours",
    "displayName": "Tour",
    "description": "Tour listings with dynamic content sections"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "slug": {
      "type": "uid"
    },
    "adventure": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::adventure.adventure",
      "inversedBy": "tours"
    },
    "startDate": {
      "type": "date"
    },
    "endDate": {
      "type": "date"
    },
    "price": {
      "type": "decimal"
    },
    "currency": {
      "type": "string",
      "default": "TRY"
    },
    "contentSections": {
      "type": "dynamiczone",
      "components": [
        "tour.hero-section",
        "tour.info-cards-section",
        "tour.timeline-section",
        "tour.gallery-section",
        "tour.pricing-section",
        "tour.contact-form-section"
      ]
    },
    "title": {
      "type": "string"
    }
  }
}
